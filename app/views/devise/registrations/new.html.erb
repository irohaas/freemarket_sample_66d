<h2>ユーザー情報登録</h2>

<%= form_for(@user, url: user_registration_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  ご利用者様の情報をご登録お願い致します。（お届け先に関しての情報は次のページにて入力していただきます。）
  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true%>
  </div>

  <div class="field">
    <%= f.label :姓（全角）%><br />
    <%= f.text_field :lastname %>
  </div>

  <div class="field">
    <%= f.label :名（全角） %><br />
    <%= f.text_field :firstname %>
  </div>

  <div class="field">
    <%= f.label :ふりがな（姓）（全角） %><br />
    <%= f.text_field :lastname_kana %>
  </div>

  <div class="field">
    <%= f.label :ふりがな（名）（全角） %><br />
    <%= f.text_field :firstname_kana %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,  autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :生年月日 %><br />
    <%= f.date_select :birthdate, use_month_numbers: true, start_year: 1940, end_year:2020, class: 'form_control'%>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :telephone_number %>
  </div>

  

  <div class="actions">
    <%= f.submit "Next" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>






