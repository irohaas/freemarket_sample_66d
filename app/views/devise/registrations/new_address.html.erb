<h2>住所情報登録</h2>

<%= form_for @address do |f| %>
  <%= render "devise/shared/error_messages", resource: @address %>

  お届け先の情報を入力お願い致します。
  <div class="field">
    <%= f.label :姓 %><br />
    <%= f.text_field :lastname %>
  </div>

  <div class="field">
    <%= f.label :名 %><br />
    <%= f.text_field :firstname %>
  </div>

  <div class="field">
    <%= f.label :ふりがな（姓） %><br />
    <%= f.text_field :lastname_kana %>
  </div>

  <div class="field">
    <%= f.label :ふりがな（名） %><br />
    <%= f.text_field :firstname_kana %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :県 %><br />
    <%= f.text_field :prefecture %>
  </div>

  <div class="field">
    <%= f.label :市区町村 %><br />
    <%= f.text_field :municipality %>
  </div>

  <div class="field">
    <%= f.label :番地 %><br />
    <%= f.text_field :street %>
  </div>

  <div class="field">
    <%= f.label :建物 %><br />
    <%= f.text_field :building %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :telephone_number %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
