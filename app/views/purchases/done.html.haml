
= stylesheet_link_tag 'purchases_done'

.buy-content
  %header.buy-content__header
    =link_to image_tag('logo/logo.png', alt: "ロゴ画像", class:"logolink__image"), root_path, class: "logolink"
  
  %h2.buy-content__main
    購入が完了しました
    .buy-content__item
      .buy-content__item__inner
        .buy-item-main
          .buy-item-image
            = image_tag @firstimage.image.url, class: "buy-item-image-main"
            
          .buy-item-detail
            .buy-item-name
              = @item.name
              %p.buy-price
                %span 
                  = "¥#{@item.price.to_s}"
                %span
                  .shipping-free (税込) 
    .buy-content__item
      %form.buy-form
        .buy-price-table
          .buy-price-table__left
            支払金額
          .buy-price-table__right
            = "¥#{@item.price.to_s}"
    .buy-content__user-info__submit
      = link_to "トップページへ戻る", root_path, class: 'buy-content__user-info__submit__button'

  = render partial:'devise/registrations/footer'